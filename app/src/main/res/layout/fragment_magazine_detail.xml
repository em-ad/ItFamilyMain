<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/bg_home">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_560sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_130sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_50sdp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:paddingLeft="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <com.zavosh.itfamily.myviews.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="تاریخ نشر"
                        android:layout_marginBottom="@dimen/_5sdp">

                    </com.zavosh.itfamily.myviews.MyTextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000000"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        />

                    <com.zavosh.itfamily.myviews.MyTextViewBold
                        android:id="@+id/publish_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        >

                    </com.zavosh.itfamily.myviews.MyTextViewBold>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="@dimen/_4sdp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back"
                android:id="@+id/img_back"

                android:scaleType="fitXY"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="IT FAMILI"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:src="@drawable/menu"
                android:padding="@dimen/_10sdp"
                android:id="@+id/menu"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_230sdp"
                android:layout_marginTop="@dimen/_300sdp"
                android:layout_marginLeft="@dimen/_52sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardPreventCornerOverlap="false"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        >

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|right"
                        android:padding="@dimen/_2sdp"
                        >

                        <com.zavosh.itfamily.myviews.MyTextView
                            android:id="@+id/tv_comments_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            >

                        </com.zavosh.itfamily.myviews.MyTextView>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/cardview_background"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:padding="@dimen/_1sdp"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_favorite_border_black_24dp"
                                >

                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center|right"
                                >

                                <com.zavosh.itfamily.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="مهدی حسنی زاده"
                                    android:textSize="@dimen/_10sdp"
                                    >

                                </com.zavosh.itfamily.myviews.MyTextView>

                                <com.zavosh.itfamily.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textSize="@dimen/_10sdp"
                                    >

                                </com.zavosh.itfamily.myviews.MyTextView>

                                <com.zavosh.itfamily.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="بسیار لذت بردم"
                                    android:textSize="@dimen/_10sdp"
                                    >

                                </com.zavosh.itfamily.myviews.MyTextView>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_gravity="right"
                                android:gravity="right"
                                >

                                <com.zavosh.itfamily.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="۲ دقیقه قبل"
                                    android:textSize="@dimen/_8sdp"
                                    >

                                </com.zavosh.itfamily.myviews.MyTextView>

                                <com.zavosh.itfamily.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="جواب"
                                    android:textSize="@dimen/_8sdp"
                                    >

                                </com.zavosh.itfamily.myviews.MyTextView>


                            </LinearLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="@dimen/_1sdp"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_insert_emoticon_black_24dp"
                                >

                            </ImageView>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <!--                    <LinearLayout-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:orientation="vertical"-->
                <!--                        android:background="@android:color/transparent"-->
                <!--                        >-->

                <!--                        <LinearLayout-->
                <!--                            android:layout_width="match_parent"-->
                <!--                            android:layout_height="0dp"-->
                <!--                            android:layout_weight="0.6"-->
                <!--                            >-->

                <!--                        </LinearLayout>-->

                <!--                        <LinearLayout-->
                <!--                            android:layout_width="match_parent"-->
                <!--                            android:layout_height="0dp"-->
                <!--                            android:layout_weight="0.38">-->

                <!--                        </LinearLayout>-->
                <!--                        <LinearLayout-->
                <!--                            android:layout_width="match_parent"-->
                <!--                            android:layout_height="0dp"-->
                <!--                            android:layout_weight="0.12"-->
                <!--                            android:layout_margin="@dimen/_8sdp"-->
                <!--                            android:background="@drawable/cardview_background"-->
                <!--                            >-->

                <!--                        </LinearLayout>-->

                <!--                    </LinearLayout>-->


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView



                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_190sdp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_250sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.53"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:paddingRight="@dimen/_4sdp">

                        <com.zavosh.itfamily.myviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textDirection="anyRtl"
                            android:gravity="center"
                            android:textColor="@color/textColor"
                            android:text="test"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/bg_corner_them"
                        >

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/like"
                            android:scaleType="fitXY"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/bg_corner_white"/>


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/comment"
                            android:scaleType="fitXY"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/bg_corner_white"/>

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/send"
                            android:scaleType="fitXY"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/bg_corner_white"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical|right"
                            >

                            <com.zavosh.itfamily.myviews.MyTextView
                                android:id="@+id/tv_likes_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white" />

                        </LinearLayout>


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:src="@drawable/download"
                            android:scaleType="fitXY"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/im_dl"
                            android:background="@drawable/bg_corner_white"/>




                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/article_item_card"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_280sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_margin="@dimen/_12sdp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        >


                        <com.zavosh.itfamily.myviews.MyImageView
                            android:id="@+id/img_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius_top_right="@dimen/_20sdp"
                            app:riv_corner_radius_top_left="@dimen/_20sdp"
                            >
                        </com.zavosh.itfamily.myviews.MyImageView>

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/pdf_icon"
                            android:layout_centerInParent="true"
                            android:src="@drawable/pdf"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_shap"
                        android:gravity="bottom|right"
                        android:orientation="vertical">
                        <com.zavosh.itfamily.myviews.MyTextView
                            android:id="@+id/tv_magazine_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_magazine_summery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>


</androidx.core.widget.NestedScrollView>