<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/_4sdp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/back"
                    android:id="@+id/img_back"

                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="IT FAMILI"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimaryDark"/>

                <ImageView
                    android:src="@drawable/menu"
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/menu"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_360sdp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_120sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_18sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:paddingLeft="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <com.zavosh.itfamily.myviews.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:text="تاریخ نشر"
                            android:layout_marginBottom="@dimen/_5sdp">

                        </com.zavosh.itfamily.myviews.MyTextView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#000000"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            />

                        <com.zavosh.itfamily.myviews.MyTextViewBold
                            android:id="@+id/link_address2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            >

                        </com.zavosh.itfamily.myviews.MyTextViewBold>

                    </LinearLayout>


                </LinearLayout>




                <!--                <include layout="@layout/stickers_cardview"/>-->


            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <RelativeLayout
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@android:color/transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_170sdp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    app:cardPreventCornerOverlap="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@android:color/transparent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"/>

                        <LinearLayout
                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_gravity="bottom"
                            android:layout_weight="0.35"
                            android:gravity="bottom|right">

                            <com.zavosh.itfamily.myviews.MyTextView
                                android:id="@+id/tv_comments"
                                android:layout_width="match_parent"
                                android:textDirection="anyRtl"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text=""
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:layout_margin="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:background="@drawable/cardview_background">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:padding="@dimen/_1sdp"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_favorite_border_black_24dp"
                                    >

                                </ImageView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:orientation="vertical"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center|right"
                                    >

                                    <com.zavosh.itfamily.myviews.MyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp"
                                        >

                                    </com.zavosh.itfamily.myviews.MyTextView>

                                    <com.zavosh.itfamily.myviews.MyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp"
                                        >

                                    </com.zavosh.itfamily.myviews.MyTextView>

                                    <com.zavosh.itfamily.myviews.MyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp"
                                        >

                                    </com.zavosh.itfamily.myviews.MyTextView>



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    >

                                    <com.zavosh.itfamily.myviews.MyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="@dimen/_8sdp"
                                        >

                                    </com.zavosh.itfamily.myviews.MyTextView>

                                    <com.zavosh.itfamily.myviews.MyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="جواب"
                                        android:textSize="@dimen/_8sdp"
                                        >

                                    </com.zavosh.itfamily.myviews.MyTextView>


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:padding="@dimen/_1sdp"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_insert_emoticon_black_24dp"
                                    >

                                </ImageView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/img_play"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/red_shape"
                    android:gravity="top|center"
                    android:elevation="15dp" >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        app:cardCornerRadius="48dp"
                        android:layout_margin="@dimen/_5sdp"

                        >

                        <com.zavosh.itfamily.myviews.MyImageView
                            android:id="@+id/profile_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <com.zavosh.itfamily.myviews.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_title"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"

                        >

                    </com.zavosh.itfamily.myviews.MyTextView>

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_fast_rewind_black_24dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play_circle_outline_black_24dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_fast_forward_black_24dp"
                            />
                    </LinearLayout>-->

                </LinearLayout>
                <!--    android:layout_below="@id/card_podcast"-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-120dp"
                    android:background="@android:color/transparent">
                    <LinearLayout
                        android:id="@+id/card_podcast"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:elevation="10dp"
                        android:background="@drawable/pod_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="55dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center|bottom"
                                android:orientation="vertical"
                                android:layout_height="@dimen/_120sdp">
                                <com.example.jean.jcplayer.view.JcPlayerView
                                    android:id="@+id/jcplayer"
                                    app:show_repeat_button="false"
                                    app:show_random_button="false"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <com.zavosh.itfamily.myviews.MyTextView
                                android:id="@+id/tv_summery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:gravity="center"
                                android:text="dsa"
                                android:textSize="@dimen/_10sdp"/>


                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@drawable/bg_corner_them"
                                >

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:src="@drawable/like"
                                    android:scaleType="fitXY"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/bg_corner_white"/>


                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:src="@drawable/comment"
                                    android:scaleType="fitXY"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/bg_corner_white"/>

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:src="@drawable/send"
                                    android:scaleType="fitXY"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/bg_corner_white"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.6"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical|right"
                                    >

                                    <com.zavosh.itfamily.myviews.MyTextView
                                        android:id="@+id/tv_likes_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white" />

                                </LinearLayout>


                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:src="@drawable/download"
                                    android:scaleType="fitXY"
                                    android:padding="@dimen/_5sdp"
                                    android:background="@drawable/bg_corner_white"/>




                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>



    </RelativeLayout>
</androidx.core.widget.NestedScrollView>