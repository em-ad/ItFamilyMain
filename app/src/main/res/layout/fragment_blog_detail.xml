<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="@dimen/_4sdp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back"
                android:id="@+id/img_back"

                android:scaleType="fitXY"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="IT FAMILI"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:src="@drawable/menu"
                android:padding="@dimen/_10sdp"
                android:id="@+id/menu"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_60sdp"
                android:layout_below="@+id/cv_top3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <com.zavosh.itfamili.myviews.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="تاریخ نشر"
                        android:layout_marginBottom="@dimen/_5sdp">

                    </com.zavosh.itfamili.myviews.MyTextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000000"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        />

                    <com.zavosh.itfamili.myviews.MyTextViewBold
                        android:id="@+id/publish_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        >

                    </com.zavosh.itfamili.myviews.MyTextViewBold>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_top3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_top2"
                app:cardElevation="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|right"
                        android:padding="@dimen/_2sdp">

                        <com.zavosh.itfamili.myviews.MyTextView
                            android:id="@+id/tv_comments_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textDirection="anyRtl"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="invisible"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/cardview_background"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:padding="@dimen/_1sdp"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_favorite_border_black_24dp"
                                >

                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center|right"
                                >

                                <com.zavosh.itfamili.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="مهدی حسنی زاده"
                                    android:textSize="@dimen/_10sdp"
                                    >

                                </com.zavosh.itfamili.myviews.MyTextView>

                                <com.zavosh.itfamili.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textSize="@dimen/_10sdp"
                                    >

                                </com.zavosh.itfamili.myviews.MyTextView>

                                <com.zavosh.itfamili.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="بسیار لذت بردم"
                                    android:textSize="@dimen/_10sdp"
                                    >

                                </com.zavosh.itfamili.myviews.MyTextView>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_gravity="right"
                                android:gravity="right"
                                >

                                <com.zavosh.itfamili.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="۲ دقیقه قبل"
                                    android:textSize="@dimen/_8sdp"
                                    >

                                </com.zavosh.itfamili.myviews.MyTextView>

                                <com.zavosh.itfamili.myviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="جواب"
                                    android:textSize="@dimen/_8sdp"
                                    >

                                </com.zavosh.itfamili.myviews.MyTextView>


                            </LinearLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="@dimen/_1sdp"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_insert_emoticon_black_24dp"
                                >

                            </ImageView>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_top2"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cv_top"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="@dimen/_16sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

                    <com.zavosh.itfamili.myviews.MyTextView
                        android:padding="@dimen/_10sdp"
                        android:justificationMode="inter_word"
                        android:layout_margin="@dimen/_4sdp"
                        android:id="@+id/tv_magazine_summery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textDirection="anyRtl"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_box_item"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/bg_corner_them"
                        >

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/like"
                            android:scaleType="fitXY"
                            android:id="@+id/iv_like"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/bg_corner_white"/>


                        <ImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/comment"
                            android:scaleType="fitXY"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/bg_corner_white"/>


                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/send"
                            android:scaleType="fitXY"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/bg_corner_white"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical|right"
                            >

                            <com.zavosh.itfamili.myviews.MyTextView
                                android:id="@+id/tv_likes_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white" />

                        </LinearLayout>


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:src="@drawable/download"
                            android:scaleType="fitXY"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/im_dl"
                            android:background="@drawable/bg_corner_white"/>




                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_top"
                android:layout_width="@dimen/_200sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="@dimen/_280sdp"
                app:cardElevation="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_margin="@dimen/_12sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                        <com.zavosh.itfamili.myviews.MyImageView
                            android:id="@+id/img_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius_top_right="@dimen/_20sdp"
                            app:riv_corner_radius_top_left="@dimen/_20sdp">
                        </com.zavosh.itfamili.myviews.MyImageView>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/pdf_icon"
                            android:layout_centerInParent="true"
                            android:src="@drawable/pdf"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_shap"
                        android:gravity="bottom|right"
                        android:orientation="vertical">
                        <com.zavosh.itfamili.myviews.MyTextView
                            android:id="@+id/tv_magazine_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>